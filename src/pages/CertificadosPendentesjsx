import React, { useEffect, useState } from "react";
import { useNavigate } from "react-router-dom";

const CertificadosPendentes = () => {
  const [alunos, setAlunos] = useState([]);
  const [menuOpen, setMenuOpen] = useState(false);
  const navigate = useNavigate();

  useEffect(() => {
    const fetchAlunos = async () => {
      try {
        const response = await fetch("http://127.0.0.1:8000/certificates/");
        if (!response.ok) throw new Error("Erro ao buscar alunos com certificados pendentes.");
        
        const data = await response.json();
        const alunosUnicos = Array.from(new Set(data.map(certificate => certificate.student.id)))
          .map(id => data.find(certificate => certificate.student.id === id)?.student);
        
        setAlunos(alunosUnicos);
      } catch (error) {
        console.error("Erro ao buscar alunos:", error);
      }
    };

    fetchAlunos();
  }, []);

  return (
    <div className="min-h-screen bg-gray-100">
      {/* Header */}
      <header className="bg-gradient-to-r from-green-500 to-green-700 p-4 flex justify-between items-center">
        <h1 className="text-white text-2xl font-bold">SISGEHC</h1>
        <div className="relative">
          <button onClick={() => setMenuOpen(!menuOpen)} className="text-white text-2xl focus:outline-none">ðŸ‘¤</button>
          {menuOpen && (
            <div className="absolute right-0 mt-2 w-48 bg-white border rounded-md shadow-lg">
              <ul className="py-2">
                <li className="px-4 py-2 hover:bg-gray-100 cursor-pointer">Minha Conta</li>
                <li className="px-4 py-2 text-red-500 hover:bg-gray-100 cursor-pointer">Sair</li>
              </ul>
            </div>
          )}
        </div>
      </header>

      {/* Lista de alunos */}
      <div className="p-6 max-w-5xl mx-auto bg-white shadow-md rounded-lg">
        <h2 className="text-2xl font-semibold mb-6">Certificados Pendentes</h2>
        <input type="text" placeholder="Pesquisar alunos" className="w-full p-2 border rounded mb-4" />

        <div className="space-y-4">
          {alunos.length > 0 ? (
            alunos.map(aluno => (
              <div key={aluno.id} className="bg-gray-200 p-4 rounded-lg flex justify-between items-center">
                <span className="font-bold">{aluno.full_name}</span>
                <button
                  className="text-blue-500 hover:underline"
                  onClick={() => navigate(`/certificados/${aluno.id}`)}
                >
                  Ver Certificados
                </button>
              </div>
            ))
          ) : (
            <p className="text-gray-500 text-center">Nenhum certificado pendente.</p>
          )}
        </div>
      </div>
    </div>
  );
};

export default CertificadosPendentes;
